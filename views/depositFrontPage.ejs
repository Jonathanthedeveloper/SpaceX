<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Deposit</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="../Images/logo.ico" type="image/x-ico" />
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <!-- Bootstrap Icon -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
    />
    <!-- Stylesheet -->
    <link rel="stylesheet" href="../CSS/main.css" />
    <!-- Custom JavaScript -->
    <script defer src="../JS/dashboard.js"></script>
    <!-- Jivo Chat -->
    <!-- <script src="//code.jivosite.com/widget/IQVm7Hn4FQ" async></script> -->
  </head>

  <body class="bg-white main">
  <%- include("partials/_alert")%>
    <%- include ("partials/sidebar"); -%>
    <section class="p-2">
      <div class="text-center mt-10">
        <h1 class="flex flex-row items-baseline justify-center text-2xl font-bold md:text-4xl">
           Choose Your Funding Method <img class="h-24 ml-1" src="../Images/fund.png" alt="Fund Icon">
        </h1>
        <h4 class="text-sm text-darkBlue md:text-base mt-2">
        Deposit Funds with Bank Transfer or Cryptocurrency.
        </h4>
      </div>
      <div>
        <form
          class="flex flex-row items-center justify-center space-x-20 mt-10"
          action=""
        >
          <div
            class="flex flex-col justify-center hover:-translate-y-2 duration-500"
          >
            <a class="" href="/user/deposit"
              ><img
                class="h-24"
                src="../Images/crypto.png"
                alt="crypto icon"
            /></a>
            <h4
              class="font-bold text-darkBlue text-base md:text-xl mt-2 text-center"
            >
              Crypto
            </h4>
          </div>
          <div
            class="flex flex-col justify-center hover:-translate-y-2 duration-500"
          >
            <a class="" href="/user/bank"
              ><img
                class="h-24"
                src="../Images/wallet.png"
                alt="Wallet icon"
            /></a>
            <h4
              class="font-bold text-darkBlue text-base md:text-xl mt-2 text-center"
            >
              Bank
            </h4>
          </div>
        </form>
      </div>
    </section>
    <section id="bankOption" class="p-2">
      <div class="text-center mt-32">
        <h1 class="flex flex-row items-center justify-center text-2xl font-bold md:text-4xl">
          Bank Funding Method <img class="h-14 ml-1" src="../Images/wallet.png" alt="Wallet Icon">
        </h1>
        <h4 class="text-sm mt-4 text-darkBlue md:text-base">
          Deposit Into Your Account Using Bank Transfers And Deposit.
        </h4>
      </div>
      <div class="flex flex-col justify-center items-center">
        <div class="flex flex-row justify-center space-x-4 items-center mt-10">
          <div class="w-4 h-4 rounded-full bg-darkBlue"></div>
          <div class="w-4 h-4 rounded-full bg-black"></div>
        </div>
        <form action="/user/deposit" class="flex flex-col justify-center items-center" method="post">
          <div class="mt-10">
            <h4 class="text-sm text-center text-darkBlue md:text-base">
              Amount To Deposit
            </h4>
            <input
              class="px-8 py-3 mt-2 placeholder:text-center placeholder:text-sm w-72 border-2 border-darkBlue md:w-96"
              type="number" name="amount" id="amount" placeholder="Minimum Of $500 " required min="500" />

            <input type="hidden" name="medium" value="bank">
          </div>
          <button type="submit"
            class="px-10 py-3 mt-10 w-72 duration-700 bg-green-500 text-black hover:bg-white hover:text-green-500 border-2 border-green-500 md:w-96">
            Deposit
          </button>
        </form>
      </div>
    </section>
    <section id="cryptoOption">
      <form action="/user/deposit" method="post">
        <div class="flex flex-col justify-center items-center">
            <div class="flex flex-row justify-center space-x-4 items-center mt-32">
                <div class="w-4 h-4 rounded-full bg-darkBlue"></div>
                <div class="w-4 h-4 rounded-full bg-black"></div>
            </div>
            <div class="text-center mt-10">
                <h1 class="flex flex-row items-center text-2xl font-bold md:text-4xl">Crypto Funding Method <span><img
                                class="ml-1 h-14" src="../Images/crypto.png" alt="This is a deposit logo"></span></h1>
                <h4 class="text-sm mt-10 text-darkBlue md:text-base">
                    Deposit Into Your Account Using Cryptocurrency.
                </h4>
            </div>
            <div class="custom-select mt-2 w-72 md:w-96 border-2 border-darkBlue">
                <select name="medium">
                    <option>Choose The Wallet</option>
                    <option value="Bitcoin" selected>Bitcoin</option>
                    <option value="Ethereum">Ethereum</option>
                    <option value="usdt">USDT</option>
                    <option value="dogecoin">Dogecoin</option>
                </select>
            </div>
            <div class="mt-10">
                <h4 class="text-sm text-center text-darkBlue md:text-base">
                    Amount To Deposit
                </h4>
                <input
                        class="px-8 py-3 mt-2 placeholder:text-center placeholder:text-sm w-72 border-2 border-darkBlue md:w-96"
                        type="number" name="amount" id="amount" placeholder="Minimum Of $500 " required min="500"/>
            </div>
            <button type="submit"
                    class="px-10 py-3 mt-10 w-72 duration-700 bg-green-500 text-black hover:bg-white hover:text-green-500 border-2 border-green-500 md:w-96">
                Deposit
            </button>
        </div>
    </form>
    </section>
    <%- include ("partials/script"); -%>
    <script src="../JS/deposit.js"></script>
  </body>
</html>
